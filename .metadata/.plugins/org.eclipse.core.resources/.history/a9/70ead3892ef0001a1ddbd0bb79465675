#include "stm32f10x.h"
#include "modbus.h"
#include "system.h"


static unsigned short	array_mb[100]			= {};				// массив для хранения принятых/переданных слов

int main(void)
{

    InitClk();

    init_modbus();

	for(;;)
	{

		array_mb[8]++;

		Modbus_slave();

	} // скобка бесконечного цикла
} // скобка мейна

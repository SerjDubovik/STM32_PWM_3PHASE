#ifndef SRC_ADC
#define SRC_ADC


#define ADC1_DR_Address    				((u32)0x40012400+0x4c)		// Адрес регистра результата преобразования АЦП
#define DMA_BUFF_SIZE 					160							// Размер буфера

#define K_Isens			0.5f				// Коэффициент для пересчёта из АЦП в Амперы тока выхода
#define K_Uzpt			0.5f				// Коэффициент для пересчёта из АЦП в Вольт ЗПТ
#define K_Un			0.5f				// Коэффициент для пересчёта из АЦП в Вольт выхода
#define K_Ibreak		0.5f				// Коэффициент для пересчёта из АЦП в Амперы на ключе



void init_adc(void);
extern void ADC1_2_IRQHandler(void);
extern void DMA1_Channel1_IRQHandler(void);


#endif // SRC_ADC
